---
type Props = {
	text?: string;
	type?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'span' | 'small' | 'strong' | 'sub' | 'sup';
	color?: string;
	class?: string;
};
const { text, type = 'p', class: className, color = 'currentColor', ...rest }: Props = Astro.props;
---

{
	type === 'h1' && (
		<h1 class={className} {...rest}>
			{text}
			<slot />
		</h1>
	)
}

{
	type === 'h2' && (
		<h2 class={className} {...rest}>
			{text}
			<slot />
		</h2>
	)
}
